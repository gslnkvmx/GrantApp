@page
@model IndexModel
@{
    ViewData["Title"] = "Главная страница";
}

<div class="container px-5 d-flex justify-content-center mt-5 mx-xl-5">
    <div class="card text-center rounded shadow-sm" style="width: auto">
        <div class="card-body">
            <div class="card-title mb-4">
                <h4 class="pt-1" style="color:rgb(68, 64, 51);">Студенты</h4>
            </div>

            <div class="row container-fluid table-responsive mx-xl-5 mx-2 my-5"
                style="border:1px solid; border-radius:10px; border-color:lightgray; width:auto">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Отчество</th>
                            <th>Номер</th>
                            <th>Ссылка ВК</th>
                            <th>группа</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.studentsList)
                        {
                            <tr>
                                <td>@student.Last_Name</td>
                                <td>@student.First_Name</td>
                                <td>@student.Middle_Name</td>
                                <td>@student.Phone_Number</td>
                                <td><a href="@student.Vk">@student.Vk</a></td>
                                <td>@student.Group_Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
